{% extends 'layout_admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <main class="container-fluid">
    <h1>Category index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Couleur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.color }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_admin_category_new') }}">Ajouter</a>
    </main>
{% endblock %}
